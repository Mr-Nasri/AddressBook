{% trans_default_domain 'FOSUserBundle' %}
<div class="container-fluid">
    <div class="page-content">
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN REGISTRATION FORM -->
            <form class="register-form" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="post">
                <h3>Modification de votre profil</h3>

                <div class="form-group">
                    <label class="control-label">Nom</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Nom'}}) }}
                </div>
                <div class="form-group">
                    <label class="control-label">Prenom</label>
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Prenom'}}) }}
                </div>
                <div class="form-group">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label">Email</label>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Email'}}) }}
                </div>
                <div class="form-group">
                    <label class="control-label">Addresse</label>
                    {{ form_widget(form.addresse, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Addresse'}}) }}
                </div>
                <div class="form-group">
                    <label class="control-label">Téléphone</label>
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Telephone'}}) }}
                </div>
                <div class="form-group">
                    <label class="control-label">Site Web</label>
                    {{ form_widget(form.siteweb, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Site web'}}) }}
                </div>
                <hr>
                <div class="form-group">
                    <label class="control-label">Username</label>
                    {{ form_widget(form.username, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Username'}}) }}
                </div>
                <div class="form-group">
                    <label class="control-label">Votre password actuel</label>
                    {{ form_widget(form.current_password, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Current password'}}) }}
                </div>
                {{ form_rest(form) }}
                <div class="form-actions">
                    <a type="button" href="{{ path('fos_user_profile_show') }}" class="btn btn-default">Back</a>
                    <button type="submit" class="btn btn-success uppercase ">Submit</button>
                </div>
            </form>
            <!-- END REGISTRATION FORM -->
        </div>
    </div>
</div>
</div>