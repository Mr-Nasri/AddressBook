{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block class_body %}class="login"{% endblock %}
{% block fos_user_content %}

    <!-- BEGIN LOGIN -->
    <div class="content">
    <!-- BEGIN REGISTRATION FORM -->
    <form class="register-form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post">
    <h3>S'enregister</h3>

    <p class="hint">
        Saissez vos informations personnelles
    </p>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Nom</label>
        {{ form_widget(form.nom, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Nom'}}) }}
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Prenom</label>
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Prenom'}}) }}
    </div>
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Email'}}) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Addresse</label>
        {{ form_widget(form.addresse, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Addresse'}}) }}
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Téléphone</label>
        {{ form_widget(form.telephone, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Telephone'}}) }}
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Site Web</label>
        {{ form_widget(form.siteweb, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Site web'}}) }}
    </div>
    <p class="hint">
        Saisissez les détails de votre compte
    </p>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        {{ form_widget(form.username, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Username'}}) }}
        {{ form_errors(form.username) }}
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Password', 'id':'register_password', 'autocomplete':'off' }}) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder' : 'Re enter password'}}) }}
        {{ form_errors(form.plainPassword.second) }}
    </div>
        {{ form_rest(form) }}
    <div class="form-actions">
        <a type="button" href="{{ path('fos_user_security_login') }}" class="btn btn-default">Back</a>
        <button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Submit</button>
    </div>
    </form>
    <!-- END REGISTRATION FORM -->
    </div>
{% endblock fos_user_content %}